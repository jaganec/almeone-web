# AlmeOne Production Environment Variables
# This file contains production-ready configuration
# DO NOT COMMIT ACTUAL SECRETS TO GIT!

# Environment
NODE_ENV=production

# Microsoft Graph API Configuration (Production)
# Replace these with your actual production credentials
TENANT_ID=your-production-tenant-id
CLIENT_ID=your-production-client-id
CLIENT_SECRET=your-production-client-secret
SENDER_EMAIL=noreply@yourdomain.com
NOTIFICATION_EMAIL=contact@yourdomain.com

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
MAX_REQUEST_SIZE=10MB
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=10

# Google reCAPTCHA (Production)
REACT_APP_RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-production-recaptcha-secret-key

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Email Configuration
EMAIL_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=2000

# Content Security
MAX_MESSAGE_LENGTH=10000
MAX_SUBJECT_LENGTH=200
MAX_NAME_LENGTH=100
MAX_COMPANY_LENGTH=200

# Azure Functions Configuration (if using Azure Functions)
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~18
FUNCTIONS_EXTENSION_VERSION=~4

# Production Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# Performance
CACHE_CONTROL_MAX_AGE=3600
ENABLE_COMPRESSION=true
ENABLE_ETAG=true

# Error Handling
MASK_ERRORS=true
ENABLE_ERROR_REPORTING=true
ERROR_WEBHOOK_URL=https://your-monitoring-service.com/webhook