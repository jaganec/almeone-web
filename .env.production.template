# AlmeOne Production Environment Variables Template
# Copy this file to .env.production for production deployment

# ================================
# REACT APP CONFIGURATION
# ================================
REACT_APP_ENV=production
REACT_APP_API_BASE_URL=https://your-azure-function-app.azurewebsites.net
REACT_APP_SITE_URL=https://almeone.com

# ================================
# GOOGLE RECAPTCHA (PRODUCTION)
# ================================
REACT_APP_RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-production-recaptcha-secret-key

# ================================
# EMAIL CONFIGURATION (PRODUCTION)
# ================================
# Gmail Production Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password

# Email Recipients
NOTIFICATION_EMAIL=info@almeone.com
ADMIN_EMAIL=admin@almeone.com
SUPPORT_EMAIL=support@almeone.com

# ================================
# SECURITY CONFIGURATION
# ================================
# Rate Limiting (requests per minute per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5

# CORS Origins (comma-separated)
CORS_ORIGINS=https://almeone.com,https://www.almeone.com

# ================================
# LOGGING AND MONITORING
# ================================
LOG_LEVEL=info
ENABLE_ANALYTICS=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ================================
# AZURE FUNCTIONS CONFIGURATION
# ================================
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~18
AzureWebJobsStorage=your-azure-storage-connection-string